---
apiVersion: helm.cattle.io/v1
kind: HelmChartConfig
metadata:
  name: traefik
  namespace: kube-system
spec:
  valuesContent: |-
    ingressRoute:
      dashboard:
        enabled: true
        annotations:
          kubernetes.io/ingress.class: traefik
          cert-manager.io/cluster-issuer: cloudflare-issuer
    api:
      dashboard: true
    metrics:
      prometheus:
        addRouterLabels: true
    hub:
      enabled: true
    logs:
      access:
        enabled: true
    ports:
      traefik:
        expose: true
